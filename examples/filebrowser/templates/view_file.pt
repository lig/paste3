<metal:tpl define-macro="view">
<html metal:use-macro="here/standard_template.pt/macros/page">
<metal:body fill-slot="body">

<p>
<tal:if condition="not: servlet/fragment">
<tal:if condition="options/parent | nothing">
Parent: <a tal:attributes="href options/parent/url"
         tal:content="options/parent/name">name</a><br>
</tal:if>
</tal:if>
Mimetype: <tt tal:content="servlet/mimetype"/>
<tal:if condition="servlet/size_text | nothing">
&nbsp; &nbsp;  Size: <tt tal:content="servlet/size_text"/></tal:if>
<br>
<a tal:attributes="href servlet/pathurl/action=download">download</a>
<tal:if condition="options/allow_edit"> |
  <a tal:attributes="href servlet/pathurl/action=edit">edit</a></tal:if>

</p>

<metal:slot define-slot="view_inline">
</metal:slot>

</metal:body>
</html>
</metal:tpl>